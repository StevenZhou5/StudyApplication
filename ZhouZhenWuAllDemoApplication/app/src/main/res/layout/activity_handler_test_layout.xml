<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/bt_normal_handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通handler测试开始" />

    <Button
        android:id="@+id/bt_handler_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_normal_handler"
        android:text="handlerTherad测试开始" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="设置延迟时间（秒）"
            android:inputType="number"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_show_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前时间为：" />
    </LinearLayout>

</RelativeLayout>